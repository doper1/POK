{
  "name": "POK",
  "version": "3.0.0",
  "private": true,
  "description": "Poker bot for whatsapp",
  "type": "commonjs",
  "main": "main.js",
  "directories": {
    "doc": "/docs"
  },
  "scripts": {
    "dev": "node --env-file=.env.dev --watch src/app.js ",
    "start": "node --env-file=.env.prod src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "semantic-release",
    "migration:generate": "drizzle-kit generate",
    "migration:push:dev": "tsx --env-file=.env.dev src/db/migrate.ts",
    "migration:push:prod": "tsx --env-file=.env.prod src/db/migrate.ts",
    "migrate:dev": "drizzle-kit generate && tsx --env-file=.env.dev src/db/migrate.ts",
    "migrate:prod": "drizzle-kit generate && tsx --env-file=.env.prod src/db/migrate.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/doper1/POK"
  },
  "keywords": [
    "Poker",
    "chatbot",
    "whatsapp",
    "POK"
  ],
  "author": "Adam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doper1/pokair/issues"
  },
  "homepage": "https://github.com/doper1/pokair#readme",
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "mustache": "^4.2.0",
    "postgres": "^3.4.4",
    "punycode": "^2.3.1",
    "puppeteer-core": "^22.11.1",
    "qrcode-terminal": "^0.12.0",
    "tsx": "^4.19.1",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "jest": "^29.7.0"
  }
}
